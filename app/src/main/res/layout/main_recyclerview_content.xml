<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        app:cardElevation="4dp"
        android:backgroundTint="#fafafa"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/content_logo"
                android:src="@drawable/ic_action_achievement"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/content_source"
                android:text="来自节点：程序员"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/content_logo"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/content_logo"
                android:gravity="center"
                android:textColor="@color/zhihuwordgray"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/content_title"
                tools:text="换个角度看前端：你是怎么应对拧巴的兼容性问题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_logo"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/Black"
                android:textSize="17sp"
                android:textStyle="bold"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>